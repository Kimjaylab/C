#include <stdio.h> 

int main(void)
{
    int a = 10, b = 20, c = 30; 

    // 포인터 배열 선언 및 초기화
    // arr[0] → a의 주소, arr[1] → b의 주소, arr[2] → c의 주소 저장
    int *arr[3] = {&a, &b, &c};

    // 포인터 배열을 통해 각 변수의 값을 출력
    printf("%d \n", *arr[0]); // a의 값 출력 → 10
    printf("%d \n", *arr[1]); // b의 값 출력 → 20
    printf("%d \n", *arr[2]); // c의 값 출력 → 30

    return 0; // 프로그램 정상 종료
}
