#include <stdio.h>
#include <stdlib.h>
int main(void)
{
int size, i;
int *arr, value = 100;
printf("배열의 크기 : ");
scanf("%d", &size);

//int arr[size]와 동일한 작업을 한 크기의 배열 생성
arr = (int *)malloc(sizeof(int) * size);
for (i = 0; i < size; i++)
arr[i] = value++;
for (i = 0; i < size; i++)
printf("%d ", arr[i]);
printf("\n");
free(arr);
return 0;
}
